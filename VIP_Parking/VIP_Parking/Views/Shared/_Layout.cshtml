<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Regis Parking Reservations</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="heading">
                <div class="content-wrapper"
                    <div class="site-title">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="~/Images/RU-logo-official_rev.png" alt="logo" />
                        </a>
                        <h1>Regis Parking Reservations</h1>
                    </div>
                </div>
            </div>
        </header>
        <div id="body">
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; Regis University, @DateTime.Now.Year. All Rights Reserved</p>
                </div>
                <div class="float-right">
                    <p>Any questions? Please contact <a href="mailto:ruparking@regis.edu">ruparking@regis.edu</a></p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>

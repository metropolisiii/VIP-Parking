@model VIP_Parking.ViewModels.ReservationVM
@{
    ViewBag.Title = "Edit";
}

<div>
    @Html.ActionLink("Back to Reservations", "Index")
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Reserv_ID)
        @Html.Partial("_Form")
        <div class="form-group">
            @Html.LabelFor(model => model.GateCode, "Gate Code", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.GateCode, null, htmlAttributes: new { @class = "form-control", @readonly="readonly" })
            </div>
        </div>
        <div class="form-group">
            <div>
                @if (Model.Approved == 0 || Model.Approved == 2)
                {
                    <button type="submit" name="Approve" value="1" class="btn btn-default green">Approve</button> 
                }
                else
                {
                    <button type="submit" name="Approve" value="Cancel" class="btn btn-default yellow">Cancel</button>
                }
               <button type="submit" id="decline" name="Approve" value="2" class="btn btn-default red">Decline</button>
            </div>
        </div>        
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
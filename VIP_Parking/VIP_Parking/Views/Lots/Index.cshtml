@model IEnumerable<VIP_Parking.Models.Database.Lot>

@{
    ViewBag.Title = "Index";
}

<h2>Lots</h2>

<p>
    @Html.ActionLink("Create New Lot", "Create", null, new { @class = "link_button purple" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Lot_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lot_Spaces_Available)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Lot_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lot_Spaces_Available)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Lot_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Lot_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Lot_ID })
        </td>
    </tr>
}

</table>
